<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Top"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_top_minus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal"
            app:iconPadding="0dp" />
        <EditText
            android:id="@+id/input_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="?attr/colorOnSurface"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_top_plus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal"
            app:iconPadding="0dp" />
    </LinearLayout>

    <!-- Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Bottom"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bottom_minus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
        <EditText
            android:id="@+id/input_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="?attr/colorOnSurface"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_bottom_plus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
    </LinearLayout>

    <!-- Left -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_left_minus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
        <EditText
            android:id="@+id/input_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="?attr/colorOnSurface"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_left_plus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
    </LinearLayout>

    <!-- Right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_right_minus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
        <EditText
            android:id="@+id/input_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="?attr/colorOnSurface"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_right_plus"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/brand_teal" />
    </LinearLayout>

</LinearLayout>
